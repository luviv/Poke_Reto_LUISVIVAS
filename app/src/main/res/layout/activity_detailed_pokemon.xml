<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedPokemon">

    <TextView
        android:id="@+id/lifeStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="118dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/spriteImage_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/release_btn"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/release_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="19dp"
        android:text="Soltar"
        app:layout_constraintEnd_toEndOf="@+id/spriteImage_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pokeName_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="39dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/spriteImage_img"
        app:layout_constraintTop_toBottomOf="@+id/spriteImage_img" />

    <TextView
        android:id="@+id/typePokemon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/pokeName_text"
        app:layout_constraintTop_toBottomOf="@+id/pokeName_text" />

    <TextView
        android:id="@+id/attackPokemon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Ataque"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/attackStat"
        app:layout_constraintStart_toStartOf="@+id/attackStat" />

    <TextView
        android:id="@+id/velocityPokemon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:text="Velocidad"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/lifePokemon_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lifePokemon_text" />

    <TextView
        android:id="@+id/lifePokemon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="21dp"
        android:text="Vida"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/lifeStat"
        app:layout_constraintStart_toStartOf="@+id/lifeStat" />

    <TextView
        android:id="@+id/defensePokemon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="15dp"
        android:text="Defensa"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/typePokemon_text"
        app:layout_constraintTop_toBottomOf="@+id/typePokemon_text" />

    <TextView
        android:id="@+id/defenseStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/defensePokemon_text"
        app:layout_constraintTop_toBottomOf="@+id/defensePokemon_text" />

    <TextView
        android:id="@+id/attackStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="69dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/lifePokemon_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/velocityStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="21dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/velocityPokemon_text"
        app:layout_constraintTop_toBottomOf="@+id/velocityPokemon_text" />

</androidx.constraintlayout.widget.ConstraintLayout>